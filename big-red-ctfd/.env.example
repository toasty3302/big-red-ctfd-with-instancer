# CTFd Database Configuration
CTFD_DB_PASSWORD=your_secure_32_char_hex_password_here
MARIADB_ROOT_PASSWORD=your_secure_32_char_hex_password_here
MARIADB_PASSWORD=your_secure_32_char_hex_password_here

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=your_resource_group_name
AZURE_LOCATION=your_azure_region

# Azure Container Registry Configuration
ACR_SERVER=your_acr_name.azurecr.io
ACR_NAME=your_acr_name
ACR_USERNAME=your_acr_username
ACR_PASSWORD=your_acr_password

# Azure Service Principal (REQUIRED for automated ACR authentication)
# Get these from: az ad sp create-for-rbac --name "ctfd-instancer" --role contributor
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret  
AZURE_TENANT_ID=your_tenant_id

# Database Connection Details for Instancer
CTFD_DB_HOST=db
CTFD_DB_PORT=3306
CTFD_DB_USER=ctfd
CTFD_DB_NAME=ctfd

# Application Configuration
DOCKER_MODE=true
FLASK_APP=app.py
FLASK_ENV=production
FLASK_SECRET_KEY=your_64_char_hex_flask_secret_key
